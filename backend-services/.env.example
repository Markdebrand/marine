# App
APP_NAME=HSOMarine API
DEBUG=true
LOG_LEVEL=INFO
ROOT_PATH=

# Frontend
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000
ALLOWED_HOSTS=

# DB (MySQL)
DB_PROFILE=local
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DB=hso_app
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_POOL_SIZE=5
MYSQL_MAX_OVERFLOW=10

# JWT
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=0
REFRESH_TOKEN_EXPIRE_MINUTES=1
JWT_AUDIENCE=hso.api

# Sessions
SESSION_CACHE_TTL=60

# Rate Limit Auth
AUTH_RATE_LIMIT_WINDOW_SECONDS=300
AUTH_RATE_LIMIT_MAX_ATTEMPTS=10

# Cookies (opcional)
AUTH_COOKIES_ENABLED=false
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAMESITE=lax

# Static auth (dev)
STATIC_AUTH_ENABLED=false
STATIC_AUTH_EMAIL=
STATIC_AUTH_PASSWORD=

# Google OAuth (opcional)
ENABLE_GOOGLE_OAUTH=false
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Odoo (opcional)
ENABLE_ODOO_INTEGRATION=false
ODOO_URL=
ODOO_DB=
ODOO_USER=
ODOO_PASSWORD=
ODOO_TIMEOUT=30
ODOO_MAX_RETRIES=3
ODOO_RETRY_BACKOFF=0.35
# Webhook
ODOO_WEBHOOK_SECRET=
ODOO_WEBHOOK_DEDUPE_TTL=600
ODOO_WEBHOOK_IP_WHITELIST=

# SMTP (opcional)
EMAIL_SENDER=
EMAIL_TO=
SMTP_CC=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SSL=false
SMTP_TLS=true

# Forms/Support flags
ENABLE_CONTACT_FORMS=true
ENABLE_SUPPORT_FORM=true

# Releases / RPC
ENABLE_RELEASES_API=true
ENABLE_RPC_API=false

# Remote App Switch (opcional)
REMOTE_STATUS_URL=
REMOTE_STATUS_CACHE_TTL=15
REMOTE_STATUS_FAIL_OPEN=true
