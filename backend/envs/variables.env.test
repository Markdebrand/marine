# HSO Marine - example variables for TEST environment
# Copy this file to envs/variables.env.test (remove .example) and fill secrets before deployment.

# MySQL
MYSQL_ROOT_PASSWORD=replace_me
MYSQL_DATABASE=hso_app_test
MYSQL_USER=hso_user
MYSQL_PASSWORD=replace_me

# App settings
JWT_SECRET_KEY=change-this-in-test
JWT_AUDIENCE=hso.api.test
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:8080

# SMTP (use a test SMTP server or a service like Mailtrap for staging)
EMAIL_SENDER=webform@hsomarine.test
EMAIL_TO=webform@hsomarine.test
SMTP_HOST=smtp.example.test
SMTP_PORT=587
SMTP_USER=change-me
SMTP_PASSWORD=change-me
SMTP_TLS=true
SMTP_SSL=false

# Feature toggles
ENABLE_ODOO_INTEGRATION=false
ENABLE_GOOGLE_OAUTH=false
